{
  "extends": "@it-diots/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@ui": ["../../packages/ui/src/components/ui"],
      "@ui/*": ["../../packages/ui/src/components/ui/*"],
      "@ui/lib/*": ["../../packages/ui/src/lib/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "postcss.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
