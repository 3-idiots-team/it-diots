{
  "name": "it-diots",
  "version": "1.2.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "turbo build",
    "build:web": "pnpm --filter @it-diots/web build",
    "dev": "turbo dev",
    "dev:web": "pnpm --filter @it-diots/web dev",
    "dev:ext": "pnpm --filter @it-diots/extensions dev",
    "web": "pnpm --filter @it-diots/web",
    "ext": "pnpm --filter @it-diots/extensions",
    "ui": "pnpm --filter @it-diots/shared ui",
    "supabase": "pnpm --filter @it-diots/supabase",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@it-diots/eslint-config": "workspace:*",
    "@it-diots/typescript-config": "workspace:*",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "catalog:",
    "turbo": "2.1.1",
    "prettier-plugin-tailwindcss": "^0.6.11"
  },
  "packageManager": "pnpm@9.12.0",
  "engines": {
    "node": ">=20.17.0"
  },
  "volta": {
    "node": "20.17.0",
    "pnpm": "9.12.0"
  },
  "corepack": {
    "enabled": true
  }
}
